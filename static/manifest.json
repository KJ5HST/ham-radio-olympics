  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View your medals, QSOs, and sync status",
      "url": "/dashboard",
      "icons": [{"src": "/static/icon-96.png", "sizes": "96x96"}]
    },
    {
      "name": "Sync QSOs",
      "short_name": "Sync",
      "description": "Sync your latest QSOs from QRZ",
      "url": "/dashboard#sync",
      "icons": [{"src": "/static/icon-96.png", "sizes": "96x96"}]
    },
    {
      "name": "Leaderboards",
      "short_name": "Standings",
      "description": "View current competition standings",
      "url": "/olympiad/sports",
      "icons": [{"src": "/static/icon-96.png", "sizes": "96x96"}]
    },
    {
      "name": "World Records",
      "short_name": "Records",
      "description": "See distance and cool factor records",
      "url": "/records",
      "icons": [{"src": "/static/icon-96.png", "sizes": "96x96"}]
    }
  ],
  "screenshots": [
    {
      "src": "/static/screenshots/dashboard-wide.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Dashboard showing medals and QSO log"
    },
    {
      "src": "/static/screenshots/dashboard-narrow.png",
      "sizes": "540x720",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile dashboard view"
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+hamradio",
      "url": "/handle-protocol?data=%s"
    }
  ],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  }
}
