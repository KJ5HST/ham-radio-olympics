# Ham Radio Olympics - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED - Must be set in production
# =============================================================================

# Admin API key for accessing /admin endpoints
# Generate a secure random string (e.g., openssl rand -hex 32)
ADMIN_KEY=your-secure-admin-key-here

# Encryption key for storing API credentials (QRZ, LoTW)
# Generate a secure random string (e.g., openssl rand -hex 32)
ENCRYPTION_KEY=your-secure-encryption-key-here

# =============================================================================
# RECOMMENDED - Should be customized per deployment
# =============================================================================

# Unique salt for key derivation (different per deployment)
# Generate with: openssl rand -hex 16
ENCRYPTION_SALT=your-unique-salt-here

# Database path (default: ham_olympics.db in current directory)
# For Fly.io, use: /data/ham_olympics.db
DATABASE_PATH=ham_olympics.db

# =============================================================================
# OPTIONAL - Security Settings
# =============================================================================

# Session duration in days (default: 30)
SESSION_DURATION_DAYS=30

# Bcrypt rounds for password hashing (default: 12, higher = slower but more secure)
BCRYPT_ROUNDS=12

# Minimum password length (default: 8)
PASSWORD_MIN_LENGTH=8

# Account lockout after N failed login attempts (default: 5)
LOCKOUT_ATTEMPTS=5

# Lockout duration in minutes (default: 15)
LOCKOUT_DURATION_MINUTES=15

# =============================================================================
# OPTIONAL - Rate Limiting
# =============================================================================

# Signup rate limit (default: 5/minute)
RATE_LIMIT_SIGNUP=5/minute

# Login rate limit (default: 10/minute)
RATE_LIMIT_LOGIN=10/minute

# =============================================================================
# OPTIONAL - Sync Settings
# =============================================================================

# Background sync interval in seconds (default: 3600 = 1 hour)
SYNC_INTERVAL=3600

# =============================================================================
# OPTIONAL - Display Settings
# =============================================================================

# Maximum QSOs to display per page (default: 50)
MAX_QSOS_DISPLAY=50

# Maximum medals to display on dashboard (default: 10)
MAX_MEDALS_DISPLAY=10

# =============================================================================
# OPTIONAL - Scoring (rarely need to change)
# =============================================================================

# Medal point values
MEDAL_POINTS_GOLD=3
MEDAL_POINTS_SILVER=2
MEDAL_POINTS_BRONZE=1

# =============================================================================
# OPTIONAL - QRZ XML API (for callsign lookups, not user sync)
# =============================================================================

# QRZ.com credentials for callsign lookups (optional)
# This is separate from user-provided API keys
QRZ_USERNAME=
QRZ_PASSWORD=

# =============================================================================
# OPTIONAL - Email Settings (for password reset, notifications)
# =============================================================================

# Email backend: "console" (prints to log) or "smtp" (sends real email)
EMAIL_BACKEND=console

# SMTP settings (only needed if EMAIL_BACKEND=smtp)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@hamradio-olympics.com

# =============================================================================
# DEVELOPMENT/TESTING
# =============================================================================

# Set to any value to enable testing mode (uses test defaults for required vars)
# TESTING=1
