# fly.toml - Fly.io configuration for Ham Radio Olympics
# Copy this file to fly.toml and customize for your deployment
#
# Auto-deploy: This file must be committed to git for GitHub Actions
# auto-deploy to work. See docs/README.md for setup instructions.

app = "your-app-name"
primary_region = "iad"  # Change to your preferred region

[build]
  dockerfile = "Dockerfile"

[env]
  DATABASE_PATH = "/data/ham_olympics.db"

[http_service]
  internal_port = 8080
  force_https = true
  auto_stop_machines = "stop"
  auto_start_machines = true
  min_machines_running = 0
  processes = ["app"]

[[services]]
  protocol = "tcp"
  internal_port = 8080

  [[services.ports]]
    port = 80
    handlers = ["http"]

  [[services.ports]]
    port = 443
    handlers = ["tls", "http"]

  [services.concurrency]
    type = "connections"
    hard_limit = 25
    soft_limit = 20

[mounts]
  source = "your_volume_name"  # Create with: fly volumes create your_volume_name --size 1
  destination = "/data"
